<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_user"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_user"
        tools:context="com.wanjiale.banjin.BanJin_RenWuLingLiao_Activity_wm">
        <!--自定义Toolbar-->
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="60dp"
            android:background="@color/background_user"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:ignore="UnknownIdInLayout">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_wihte_frame"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9_pinguan_yuanliao2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="产线选择"
                    android:textSize="11sp" />

                <View
                    android:id="@+id/view9_pinguan_yuanliao2"
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/textView9_pinguan_yuanliao2"
                    android:background="#EEEFFF" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:entries="@array/Data3"
                    android:paddingLeft="60dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1_peisongxiangqing"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_user"
            android:focusable="true"
            android:layout_below="@+id/relativeLayout2"
            android:focusableInTouchMode="true"
            tools:ignore="UnknownIdInLayout">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_wihte_frame">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="当前批号"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_toEndOf="@+id/textView1"
                    android:background="#EEEFFF" />

                <EditText
                    android:id="@+id/dangqianpihao"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/view1"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:gravity="left|top"
                    android:hint="请输入批号"
                    android:text=""
                    android:padding="1dp"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1_peisongxiangqing"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relativeLayout2_peisongxiangqing"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@color/background_user">

                <TextView
                    android:id="@+id/textView2_wuliaopeisong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="产品编号："
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/chanpinbianma"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="81dp"
                    android:hint="请扫描产品条码..."
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout1"
            android:layout_marginTop="20dp">
        <RelativeLayout
            android:id="@+id/relativeLayout3_peisongxiangqing"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/background_user">

            <TextView
                android:id="@+id/textView3_wuliaopeisong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:text="产品名称："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/chanpingmingcheng"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView3_wuliaopeisong"
                android:hint="请扫描产品条码..."
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LinearLayout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout2"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relativeLayout4_peisongxiangqing"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true"
                android:background="@color/background_user">

                <TextView
                    android:id="@+id/textView4_wuliaopeisong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="规格型号："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/guigexinghao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView4_wuliaopeisong"
                    android:text=""
                    android:hint="请扫描产品条码..."
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout5">
            <RelativeLayout
                android:id="@+id/relativeLayout18_peisongxiangqing"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@color/background_user">

                <TextView
                    android:id="@+id/textView18_wuliaopeisong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="计量单位："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/jiliangdanwei"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView18_wuliaopeisong"
                    android:text=""
                    android:hint="请扫描产品条码..."
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_below="@+id/LinearLayout3"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/login_button_selector"
            android:padding="1dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="21sp" />




    </RelativeLayout>
</RelativeLayout>