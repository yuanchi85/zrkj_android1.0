                            android:cursorVisible="false"
                            android:editable="false"
                            android:ems="19"
                            android:hint=""
                            android:imeOptions="actionDone"
                            android:inputType="none"
                            android:padding="1dp"
                            android:singleLine="true"
                            android:textIsSelectable="false"
                            android:textSize="12sp" />


                    </RelativeLayout>
                </RelativeLayout>
                <!--当前批号-->
